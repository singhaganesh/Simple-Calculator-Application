<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_margin="10sp"
        android:gravity="end"
        app:layout_constraintBottom_toTopOf="@id/txt_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10sp"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10sp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_all_clear"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="AC"
                android:background="@drawable/all_clear_button"/>

            <Button
                android:id="@+id/btn_remainder"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="%"
                android:textColor="@color/blue_button_color"
                android:textStyle="bold"
                android:background="@drawable/other_button"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:text="DEL"
                android:textColor="@color/blue_button_color"
                android:textStyle="bold"
                android:background="@drawable/other_button"/>

            <Button
                android:id="@+id/btn_division"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="/"
                android:textColor="@color/blue_button_color"
                android:textStyle="bold"
                android:background="@drawable/other_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/seven"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/eight"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/nine"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="x"
                android:textColor="@color/blue_button_color"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/other_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/four"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_five"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/five"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_six"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/six"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_subtraction"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="35sp"
                android:text="-"
                android:textColor="@color/blue_button_color"
                android:textStyle="bold"
                android:background="@drawable/other_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/one"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_two"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/two"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_three"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/three"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_addition"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="+"
                android:textColor="@color/blue_button_color"
                android:textStyle="bold"
                android:background="@drawable/other_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_00"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="00"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="@string/dot"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/number_button"/>

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10sp"
                android:textSize="25sp"
                android:text="="
                android:textColor="@color/white"
                android:background="@drawable/equal_button"/>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>